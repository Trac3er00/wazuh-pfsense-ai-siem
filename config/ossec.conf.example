<!--
  Wazuh AI SIEM - Example ossec.conf additions
  
  Add these sections to your existing /var/ossec/etc/ossec.conf
  within the <ossec_config> tags.
  
  Author: @Trac3er00
-->

<!-- ============================================
     REMOTE SYSLOG (for pfSense)
     ============================================ -->
<remote>
  <connection>syslog</connection>
  <port>514</port>
  <protocol>udp</protocol>
  <allowed-ips>10.10.0.0/23</allowed-ips>
</remote>

<!-- ============================================
     ENABLE ARCHIVE LOGGING
     Required for AI Threat Hunter to work
     ============================================ -->
<global>
  <logall>yes</logall>
  <logall_json>yes</logall_json>
</global>

<!-- ============================================
     DNS AI INTEGRATION
     Analyzes DNS queries with LLM
     ============================================ -->
<integration>
  <name>custom-ai-dns-discord</name>
  <hook_url>placeholder</hook_url>
  <level>3</level>
  <rule_id>111001</rule_id>
  <alert_format>json</alert_format>
</integration>

<!-- ============================================
     PFSENSE AI INTEGRATION
     Analyzes firewall blocks with LLM
     ============================================ -->
<integration>
  <name>custom-pfsense-ai-discord</name>
  <hook_url>placeholder</hook_url>
  <level>8</level>
  <rule_id>112010,112011</rule_id>
  <alert_format>json</alert_format>
</integration>

<!-- ============================================
     SSH INTEGRATION
     Alerts on SSH brute force attacks
     ============================================ -->
<integration>
  <name>custom-ssh-discord</name>
  <hook_url>placeholder</hook_url>
  <level>6</level>
  <group>sshd,authentication_failed</group>
  <alert_format>json</alert_format>
</integration>
